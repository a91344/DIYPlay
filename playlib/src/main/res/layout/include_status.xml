<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ijk_rl_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ijk_ll_top_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7f4D4D4D"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ijk_tv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="返回" />

        <TextView
            android:id="@+id/ijk_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="视屏标题" />

        <TextView
            android:id="@+id/ijk_tv_elc_or_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="电量:88\n时间:13:25" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ijk_ll_bottom_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7f4D4D4D"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ijk_bt_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/play_button"
            android:text="播放"
            android:textColor="#00000000" />

        <SeekBar
            android:id="@+id/ijk_sb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/ijk_bt_full_screen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/full_screen"
            android:text="全屏"
            android:textColor="#00000000" />
    </LinearLayout>
</RelativeLayout>